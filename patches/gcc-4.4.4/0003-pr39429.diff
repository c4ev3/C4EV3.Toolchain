--- gcc-4.4.4.orig/gcc/config/arm/arm.md
+++ gcc-4.4.4/gcc/config/arm/arm.md
@@ -10348,6 +10348,21 @@
 	else
 	  {
 	    /* Offset is out of range for a single add, so use two ldr.  */
+
+	    /* Swap the ldrs if the first ldr would clobber the shared base_reg.  */
+	    if (REGNO (ldm[1]) == REGNO (base_reg))
+	      {
+		rtx tmp_reg;
+		HOST_WIDE_INT tmp_val;
+
+		tmp_reg = ldm[1];
+		ldm[1] = ldm[2];
+		ldm[2] = tmp_reg;
+		tmp_val = val1;
+		val1 = val2;
+		val2 = tmp_val;
+	      }
+
 	    ops[0] = ldm[1];
 	    ops[1] = base_reg;
 	    ops[2] = GEN_INT (val1);
